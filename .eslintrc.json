{
  "parserOptions": {
    "sourceType": "script",
    "impliedStrict": false
  },
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "standard"
  ],
  "root": true,
  "rules": {
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "comma-style": "error",
    "comma-spacing": [
      "error",
      {
        "after": true,
        "before": false
      }
    ],
    "indent": [
      "error",
      "tab",
      {
        "SwitchCase": 1
      }
    ],
    "no-tabs": [
      "off"
    ],
    "no-var": [
      "error"
    ],
    "prefer-arrow-callback": [
      "error"
    ],
    "prefer-const": [
      "error"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always",
      {
        "omitLastInOneLineBlock": false
      }
    ],
    "strict": [
      "error",
      "safe"
    ]
  },
  "overrides": [
    {
      "files": [
        "test/**/*"
      ],
      "env": {
        "mocha": true
      }
    }
  ]
}
